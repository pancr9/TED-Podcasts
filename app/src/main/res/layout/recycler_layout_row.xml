<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_shadow_end_color"
    android:paddingEnd="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingStart="8dp"
    android:paddingTop="8dp"
    android:theme="@style/Base.CardView">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/cardview_shadow_end_color"
        android:padding="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:padding="8dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:adjustViewBounds="true"
                android:elevation="0dp"
                android:padding="@android:dimen/app_icon_size"
                android:scaleType="center" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView"
                android:padding="2dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewPosted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewTitle"
                android:layout_toRightOf="@+id/imageView"
                android:padding="2dp"
                android:textColor="@android:color/darker_gray" />

            <ImageView
                android:id="@+id/imageViewPlay"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/textViewPosted"
                android:layout_toEndOf="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:adjustViewBounds="true"
                android:padding="2dp"
                app:srcCompat="@drawable/circledplay" />

            <TextView
                android:id="@+id/textViewPlayThis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewPosted"
                android:layout_toEndOf="@+id/imageViewPlay"
                android:layout_toRightOf="@+id/imageViewPlay"
                android:padding="2dp"
                android:text="@string/playnow"
                android:textColor="@android:color/holo_orange_dark" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>